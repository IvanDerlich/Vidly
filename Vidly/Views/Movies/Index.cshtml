@model Vidly.ViewModels.MovieIndexViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>
@if (!Model.Movies.Any())
{
    //se muestra que no hay clientes
    <h2>No hay Pelis</h2>
}
else
{
    <table class=“table table-bordered table-hover”>
        <tr><th>Movie</th></tr>
        @foreach (var movie in Model.Movies)
        {
            <tr><td>@Html.ActionLink(@movie.Name, "Details", "Customers", @movie, null) </td></tr>
            //no se como hacer para que no muestre el nombre por el url,
            //tal vez la solucion seria pasae los parametros del objeto por post
            //y si esa es la solucion, ¿como se hace?
        }
    </table>
}